generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Fortune {
  id        Int      @id @default(autoincrement())
  text      String
  category  String @default("general")
  type      String @default("unfortunate")
  createdAt DateTime @default(now())
}